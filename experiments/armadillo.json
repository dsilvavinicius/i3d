{
    "description": "SIREN Learning of the Armadillo mesh.",
    "num_epochs": 1,
    "sampling_opts": {
        "samples_on_surface": 150000,
        "samples_off_surface": 150000,
        "random_surf_samples": true,
        "sampler": false
    },
    "dataset": "armadillo.ply",
    "batch_size": 300000,
    "off_surface_sdf": -1,
    "checkpoint_path": "logs",
    "experiment_name": "armadillo_test",
    "epochs_to_checkpoint": 10,
    "epochs_to_reconstruction": 100,
    "loss": "sitzmann",
    "optimizer": {
        "type": "adam",
        "lr": 1e-4
    },
    "reconstruction": {
        "resolution": 128,
        "output_file": "final"
    },
    "network": {
        "hidden_layer_nodes": [256, 256, 256],
        "w0": 30
    }
}
